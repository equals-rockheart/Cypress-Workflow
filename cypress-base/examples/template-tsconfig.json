{
  "extends": "./cypress-workflow/cypress-base/base/base.tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@integrations/*": ["cypress-workflow/cypress-base/integrations/*"],
      "@pages/*": ["cypress/pages/*"],
      "@support/*": ["cypress/support/*"],
      "@modules/*": ["cypress/support/modules/*"]
    },
    "types": ["cypress", "node"]
  },
  "include": [
    "cypress.config.ts",
    "cypress/**/*.ts",
    "cypress-workflow/cypress-base/**/*.ts",
    "cypress-workflow/cypress-base/**/*.d.ts"
  ]
}